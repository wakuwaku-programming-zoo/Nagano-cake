<div class="container mt-4">
  <div class="row">
    <div class="col-md-6">
      <h2>会員一覧</h2>
    </div>

  </div>
</div>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to "#{customer.last_name} #{customer.first_name}", admin_customer_path(customer) %></td>
              <td><%= customer.email %></td>
              <td><%= customer.is_cancel_membership ? "退会" : "有効" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>