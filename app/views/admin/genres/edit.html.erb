<h1>ジャンル変更</h1>

<%= form_with(model: @genre, url: admin_genre_path(@genre), method: :patch) do |f| %>
<div class="container">
  <div class="row">
    <div class="col-4">
      ジャンル名
    </div>

    <div class="col-4">
      <%= f.text_field :name, class:"form-control", placeholder:"ジャンル名" %>
    </div>

    <div class="col-4">
      <%= f.submit "変更を保存", class: "btn btn-primary" %>
    </div>

  </div>
</div>

<% end %>