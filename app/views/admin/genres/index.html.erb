<!--ジャンル投稿-->
<h1>ジャンル一覧・追加</h1>

<%= form_with model: @genre, url: admin_genres_path do |f| %>
<div class="container">
  <div class="row">
    <div class="col-2">
      ジャンル名
    </div>

    <div class="col-2">
      <%= f.text_field :name, class:"form-control", placeholder:"ジャンル名" %>
    </div>

      <div class="col-2">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>

      <% end %>

    <!--投稿一覧-->

          <table class="table">
            <thead>
             <tr class="striped">
              <th>ジャンル</th>
              <th colspan="1"></th>
             </tr>
            </thead>


            <tbody>
              <% @genres.each do |genre| %>
             　 <tr>
                <td><%= genre.name %></td>
               　<td><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-sm btn-success" %></td>
               </tr>
               <% end %>
            </tbody>
          </table>



  </div>
</div>

