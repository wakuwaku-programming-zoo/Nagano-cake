<!--ジャンル投稿-->


<%= form_with model: @genre, url: admin_genres_path do |f| %>
<div class="container ml-4 my-4">
  <h2><span class="bg-light p-2">ジャンル一覧・追加</span></h2>
  <div class="row mt-5">
    <div class="col-2">
      ジャンル名
    </div>
    <div class="col-2">
      <%= f.text_field :name, class:"form-control", placeholder:"ジャンル名" %>
    </div>
    <div class="col-2">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>

    <% end %>


    <!--投稿一覧-->
  <div class="col-12 col-md-8">
    <table class="table mt-5">
      <thead>
       <tr>
        <th class="bg-light text-center ml-2">ジャンル</th>
        <th class="bg-light"></th>
       </tr>
      </thead>


      <tbody>
        <% @genres.each do |genre| %>
       　 <tr>
           <td><%= genre.name %></td>
       　   <td><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-sm btn-success" %></td>
         </tr>
         <% end %>
      </tbody>
    </table>
   </div>
  </div>
</div>





