<div class="container mt-4" style="padding-bottom: 70px;">
  <div class="row">
    <div class="col-md-6">
      <h2>商品一覧</h2>
    </div>
    <div class="col-md-6 text-right">
      <%= link_to "商品登録", new_admin_item_path, class: "btn btn-info" %>
    </div>
  </div>
</div>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item) %></td>
              <td><%= number_to_currency(item.price, unit: "円") %></td>
              <td><%= item.genre.name %></td>
              <td><%= item.is_sales_status ? "販売中" : "販売停止中" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
