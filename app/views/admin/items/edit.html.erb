<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>商品編集</h2>

      <%= form_with(model: [:admin, @item], url: admin_item_path(@item), method: :patch, html: { multipart: true }) do |f| %>

        <div class="form-group">
          <%= f.label :商品画像 %>
          <%= f.file_field :image %>
        </div>

        <div class="form-group">
          <%= f.label :商品名 %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :商品説明 %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :ジャンル %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "-- 選択してください --" %>
        </div>

        <div class="form-group">
          <%= f.label :税抜価格 %>
          <div class="input-group">
            <%= f.text_field :price, class: "form-control" %>
            <div class="input-group-append">
              <span class="input-group-text">円</span>
            </div>
          </div>
        </div>


        <div class="form-group">
          <%= f.label :販売ステータス %>
          <%= f.select :is_sales_status, options_for_select([["販売中", true], ["販売停止中", false]]), class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "変更を保存", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
