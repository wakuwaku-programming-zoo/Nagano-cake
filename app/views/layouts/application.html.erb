<!DOCTYPE html>
<html>
  <head>
    <title>WorkGithub</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>LOGO</span>
          </a>
          <ul class="navbar-nav ml-auto">
            <% if customer_signed_in? %>
              <li><%= link_to "マイページ", public_customers_path, class: "btn" %></li>
              <li><%= link_to "商品一覧", public_items_path, class: "btn" %></li>
              <li><%= link_to "カート", public_cart_items_path, class: "btn" %></li>
              <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn" %></li>
            <% elsif admin_signed_in? %>
              <li><%= link_to "商品一覧", public_items_path, class: "btn" %></li>
              <li><%= link_to "会員一覧", admin_customers_path, class: "btn" %></li>
              <li><%= link_to "注文履歴一覧", admin_admin_path, class: "btn" %></li>
              <li><%= link_to "ジャンル一覧", admin_genres_path, class: "btn" %></li>
              <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn" %></li>
            <% else %>
              <li><%= link_to "about", public_about_path, class: "btn" %></li>
              <li><%= link_to "商品一覧", public_items_path, class: "btn" %></li>
              <li><%= link_to "新規登録", new_customer_registration_path, class: "btn" %></li>
              <li><%= link_to "ログイン", customer_session_path, class: "btn" %></li>
            <% end %>

          </ul><rb>
            <form class="d-flex">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>

    </header>
    <%= yield %>
  </body>
</html>
