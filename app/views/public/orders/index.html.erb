<div class="container mt-4">
  <h2>注文履歴一覧</h2>
  <div class="row">
    <div class="col-md-10">

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td>
                〒<%= order.postcode %><br>
                <%= order.address %><br>
                <%= order.name %>
              </td>
              <td>
                
              </td>
              <td><%= order.total_amount %></td>
              <td><%= order.status %></td>
              <td><%= link_to '表示する', public_order_path(order) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
