<%= form_with model: @address, url: public_address_path(@address), method: :patch do |f| %>
  <div class="container ml-4 my-4">
    <h2><span class="bg-light p-2">配送先編集</span></h2>
    <div class="row mt-5">
      <div class="col-3">
        郵便番号（ハイフンなし）
      </div>
      <div class="col-3">
        <%= f.text_field :postcode, class:"form-control" %>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-3">
        住所
      </div>
      <div class="col-6">
        <%= f.text_field :address, class:"form-control" %>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-3">
        宛名
      </div>
      <div class="col-3">
        <%= f.text_field :name, class:"form-control" %>
      </div>
      <div class="col-4 text-right">
        <%= f.submit "変更内容を保存", class: "btn btn-success" %>
      </div>
    </div>
  </div>
<% end %>