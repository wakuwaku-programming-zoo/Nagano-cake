<%= form_with model: @address, url: public_addresses_path do |f| %>
  <div class="container ml-4 my-4">
    <h2><span class="bg-light p-2">配送先登録/一覧</span></h2>
    <div class="row mt-5">
      <div class="col-3">
        郵便番号（ハイフンなし）
      </div>
      <div class="col-3">
        <%= f.text_field :postcode, class:"form-control", placeholder:"0000000" %>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-3">
        住所
      </div>
      <div class="col-6">
        <%= f.text_field :address, class:"form-control", placeholder:"東京都渋谷区代々木神園町0-0" %>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-3">
        宛名
      </div>
      <div class="col-3">
        <%= f.text_field :name, class:"form-control", placeholder:"令和道子" %>
      </div>
      <div class="col-4 text-right">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>
  </div>
<% end %>


<div class="container mt-4">
  <div class="row">
    <div class="col-md-8">

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |shipping_address| %>
            <tr>
              <td><%= shipping_address.postcode %></td>
              <td><%= shipping_address.address %></td>
              <td><%= shipping_address.name %></td>
              <td>
                <%= link_to "編集する", edit_public_address_path(shipping_address), class: "btn btn-success btn-sm" %>
                <%= link_to "削除する", public_address_path(shipping_address), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
