<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-9">
      <h2 class="mt-4">新規会員登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="form-group row">
          <div class="col-md-4">
            <%= f.label :名前 %>
          </div>
          <div class="col-md-4">
            <%= f.label :（性）, class: "col-form-label" %>
            <%= f.text_field :last_name, class: "form-control" %>
          </div>
          <div class="col-md-4">
            <%= f.label :（名）, class: "col-form-label" %>
            <%= f.text_field :first_name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-4">
            <%= f.label :フリガナ %>
          </div>
          <div class="col-md-4">
            <%= f.label :（セイ）, class: "col-form-label" %>
            <%= f.text_field :last_name_kana, class: "form-control" %>
          </div>
          <div class="col-md-4">
            <%= f.label :（メイ）, class: "col-form-label" %>
            <%= f.text_field :first_name_kana, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-4">
            <%= f.label :メールアドレス, class: "col-form-label" %>
          </div>
          <div class="col-md-8">
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-4">
            <%= f.label :郵便番号（ハイフンなし）, class: "col-form-label" %>
          </div>
          <div class="col-md-8">
            <%= f.text_field :postcode, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-4">
            <%= f.label :住所, class: "col-form-label" %>
          </div>
          <div class="col-md-8">
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-4">
            <%= f.label :電話番号（ハイフンなし）, class: "col-form-label" %>
          </div>
          <div class="col-md-8">
            <%= f.text_field :telephon_number, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-4">
            <%= f.label :パスワード（６文字以上）, class: "col-form-label" %>
          </div>
          <div class="col-md-8">
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-4">
            <%= f.label :パスワード（確認用）, class: "col-form-label" %>
          </div>
          <div class="col-md-8">
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-primary" %>
        </div>

      <% end %>

      <h4>すでに登録済みの方</h4>
      <%= link_to "こちら", new_customer_session_path %>からログインしてください
    </div>
  </div>
</div>
