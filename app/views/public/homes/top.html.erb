      <div class="container">
        <div class="row">
          <div class="col-6">
              <h2>新着商品</h2>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row">
          <!--3つまでに表示でとめる-->
          <% @items.take(3).each do |item| %>
            <div class="col-md-4"><!-- col-md-4 クラスを追加して3つのカードが横に並ぶように -->
              <div class="card" style="width: 18rem;">
                <%= link_to public_item_path(item.id) do %>
                  <%= image_tag item.get_image, class: "card-img-top", alt: item.name, style: "max-height: 180px;" %>
                  <div class="card-body">
                  <h5 class="card-title"><%= item.name %></h5>
                  <p class="card-text">価格: ￥<%= item.price %></p>
                  <p class="<%= item.is_sales_status ? '' : 'text-danger' %>">
                    <%= item.is_sales_status ? "" : "売切れ" %>
                  </p>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div class="container" style="padding-bottom: 70px;">
        <div class="row">
          <div class="ml-auto">
          　  <%= link_to '一覧を見る', public_items_path, class: "btn btn-primary" %>
           </div>
      　</div>
      </div>


















