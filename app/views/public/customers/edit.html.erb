
<%= form_with(model: @customer,url: public_customers_path(@customer), method: :patch) do |f| %>
<div class="container ml-4 my-4">
  <h2><span class="bg-light p-2">会員情報編集</span></h2>
  <div class="row my-0">

    <div class="col-8">
      <div class="row ">
        <div class="col-2 align-self-center">
          氏名
        </div>
        <div class="col-4">
   　　　　 <%= f.text_field :last_name, class: "form-control", placeholder: "姓" %>
  　　　</div>

  　　　<div class="col-4">
   　　　　 <%= f.text_field :first_name, class: "form-control", placeholder: "名" %>
  　　　</div>
      </div>

      <div class="row">
        <div class="col-2 align-self-center">
          フリガナ
        </div>
        <div class="col-4">
  　 　　<%= f.text_field :last_name_kana, class: "form-control", placeholder: "セイ" %>
  　　　</div>

  　　　<div class="col-4">
  　　　 <%= f.text_field :first_name_kana, class: "form-control", placeholder: "カナ" %>
  　　　</div>
      </div>

      <div class="row">
        <div class="col-2 align-self-center">
          郵便番号
        </div>
        <div class="col-4">
  　 　　<%= f.text_field :postcode, class: "form-control", placeholder: "0000000" %>
  　　  </div>
  　　</div>

  　　<div class="row">
        <div class="col-2 align-self-center">
          住所
        </div>
        <div class="col-8">
  　 　  　<%= f.text_field :address, class: "form-control", placeholder: "東京都渋谷区代々木神園町0-0" %>
  　　    </div>
  　　  </div>

  　</div>
  </div>
</div>


 <%= f.submit "編集内容を保存", class: "btn btn-success" %>

 <% end %>




