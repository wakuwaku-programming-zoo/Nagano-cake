

<div class="container ml-4 my-4">
  <h2><span class="bg-light p-2">マイページ</span></h2>

  <div class="row mt-5">
    <div class="col-1 my-4 font-weight-bold">
      登録情報
    </div>
    <div class="col-2 my-4">
      <%= link_to '編集する', public_customers_edit_path, class: "btn btn-success" %>
    </div>

    <table class="table table-bordered">
      <tr>
        <th class="col-2 bg-light">氏名</th>
        <td><%= @customer.last_name %> <%= @customer.first_name %></td>
      </tr>
      <tr>
        <th class="col-3 bg-light">カナ</th>
        <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th class="col-3 bg-light">郵便番号</th>
        <td><%= @customer.postcode %></td>
      </tr>
      <tr>
        <th class="col-3 bg-light">住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th class="col-3 bg-light">電話番号</th>
        <td><%= @customer.telephon_number %></td>
      </tr>
      <tr>
        <th class="col-3 bg-light">メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </table>


    <div class="col-2">
      配送先
    </div>
    <div class="col-2">
      <%= link_to '一覧を見る', public_addresses_path, class: "btn btn-primary" %>
    </div>

    <div class="col-2">
      注文履歴
    </div>
    <div class="col-2">
      <%= link_to '一覧を見る', public_orders_path, class: "btn btn-primary" %>
    </div>

  </div>
</div>



